{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
    "standard",
    "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
  "plugins": [
    "jsdoc"
  ],
    "rules": {
    "jsdoc/require-param-description": 0,
    "jsdoc/require-returns-description": 0,
    "jsdoc/require-param-type": 1,
    "jsdoc/check-line-alignment": 1,
    "jsdoc/check-indentation": 1,
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
    }
}
